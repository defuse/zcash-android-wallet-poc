        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@id/guideline_zec_usd_spacer"/>-->

    <ImageView
        android:id="@+id/image_zec_symbol_balance_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:elevation="4dp"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:alpha="0"
        app:srcCompat="@drawable/ic_zec_symbol"
        android:tint="#B3000000"
        app:layout_constraintTop_toTopOf="@+id/image_zec_symbol_balance"
        app:layout_constraintStart_toStartOf="@id/image_zec_symbol_balance"/>

    <ImageView
        android:id="@+id/image_zec_symbol_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:elevation="4dp"
        android:scaleX="0.4"
        android:scaleY="0.4"
        app:layout_constraintBottom_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="@id/appBarLayout"
        app:layout_constraintTop_toTopOf="@id/appBarLayout"
        app:layout_constraintVertical_bias="0.38"
        app:srcCompat="@drawable/ic_zec_symbol" />

    <TextView
        android:id="@+id/text_balance_zec_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:text="is a currency symbol for ZEC"
        android:drawableStart="@drawable/ic_zec_symbol"
        android:drawableLeft="@drawable/ic_zec_symbol"
        android:drawablePadding="6dp"
        android:textColor="@color/zcashWhite"
        android:textSize="16dp"
        android:scaleY="0"
        android:scaleX="0"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Zcash badge -->
    <Space
        android:id="@+id/guideline_logo_offset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="12dp"
        app:srcCompat="@drawable/ic_zcashlogo_badge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_logo_offset"/>
    
    <ImageView
        android:id="@+id/image_empty_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.2"
        android:alpha="0"
        app:srcCompat="@drawable/ic_emptywallet" />

    <TextView
        android:id="@+id/text_wallet_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="@string/home_empty_wallet"
        android:textColor="#AAAAAA"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_empty_wallet" />

    <TextView
        android:id="@+id/text_wallet_message_collapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="@string/home_empty_wallet_collapse"
        android:textColor="#AAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.leinardi.android.speeddial.SpeedDialView
        android:id="@+id/sd_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:sdMainFabClosedBackgroundColor="@color/fab_closed_color"
        app:sdMainFabClosedSrc="@drawable/ic_add_white_24dp"
        app:sdMainFabOpenedBackgroundColor="@color/fab_open_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!--        -->
    <!-- Groups -->
    <!--        -->
    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_full_view_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="text_balance_usd,text_balance_includes_info"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_empty_view_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="text_balance_zec_info,image_empty_wallet,text_wallet_message,text_wallet_message_collapsed"/>
</androidx.constraintlayout.motion.widget.MotionLayout>